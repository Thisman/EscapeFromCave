# Текстовые YAML ассеты Unity
*.unity text merge=unityyamlmerge
*.prefab text merge=unityyamlmerge
*.asset text merge=unityyamlmerge
*.anim text
*.controller text
*.mat text

# Бинарные под LFS
*.psd filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.fbx filter=lfs diff=lfs merge=lfs -text
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.exr filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text

# --- Unity text assets ---
*.cs text eol=lf
*.shader text eol=lf
*.cginc text eol=lf
*.compute text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.meta text eol=lf
*.unity text eol=lf
*.prefab text eol=lf
*.asset text eol=lf
*.mat text eol=lf
*.anim text eol=lf
*.controller text eol=lf

# --- Binary assets (don't touch line endings) ---
*.png binary
*.jpg binary
*.psd binary
*.fbx binary
*.wav binary
*.mp3 binary
*.ogg binary
*.tga binary
*.exr binary
*.mp4 binary
*.zip binary
